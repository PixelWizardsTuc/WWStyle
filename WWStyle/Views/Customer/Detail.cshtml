@model WWStyle.AspNetUser
@{

}

<h2>Customer Details</h2>
<hr />
<div class="row gx-4 gx-lg-5 align-items-center" style="margin-bottom: 10px">

    <div class="col-md-6">
        <h1 class="display-5 fw-bolder">User Name: @Model.UserName</h1>
        <div class="fs-5 mb-5">
        </div>
        <p class="lead">Email: @Model.Email.</p>
        <p class="lead">Role: Lorem ipsum</p>
        <p class="lead">Order history: Lorem ipsum</p>

        <div class="d-flex">
            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
            <a asp-controller="Customer" asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger">Delete</a>

        </div>
    </div>
</div>
