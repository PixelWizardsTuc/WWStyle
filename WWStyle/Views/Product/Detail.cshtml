@model Product
@{

}
<h2>Product Detail</h2>
<p class="alert alert-@ViewData["alertstyle"]">@DateTime.Now.ToLongTimeString()</p>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>Product Id</dt>
        <dd>@Model.ProductId</dd>
        <dt>Product Name</dt>
        <dd>@Model.ProductName</dd>
        <dt>Category Id</dt>
        <dd>@Model.Picture</dd>
        <dt>Unit Price</dt>
        <dd>@Model.Price</dd>
        <dt>Units In Stock</dt>
        <dd>@Model.Stock</dd>
    </dl>
</div>