@model List<Product>

<h2>Products</h2>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow" >
                        <img class="card-img-top"  src="@product.Picture" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@product.ProductName.</p>
                            <p class="card-text">@product.Description.</p> <!--d-inline-block text-truncate" style="max-width: 150px" //lägg till detta i classen för att minska text till ... (funkar endast på små enheter än sålänge)-->
                            <div class="d-flex justify-content-between align-products-center">
                                <div class="btn-group">
                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ProductId" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                </div>
                                <small class="text-muted">@product.Price $</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>